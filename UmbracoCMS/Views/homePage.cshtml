@using Umbraco.Cms.Web.Common.PublishedModels;
@inherits Umbraco.Cms.Web.Common.Views.UmbracoViewPage
@{
	Layout = "mainLayout.cshtml";
	ViewBag.Title = Model?.Value("pageTitle") ?? null;
    var backgroundImage = Model?.Value<IPublishedContent>("showcaseBackgroundImage")?.Url() ?? "";
    var signatureImage = Model?.Value<IPublishedContent>("aboutSignatureImage")?.Url() ?? "";
    var cardOneImage = Model?.Value<IPublishedContent>("servicesCardOneImage")?.Url() ?? "";
    var cardTwoImage = Model?.Value<IPublishedContent>("servicesCardTwoImage")?.Url() ?? "";
    var cardThreeImage = Model?.Value<IPublishedContent>("servicesCardThreeImage")?.Url() ?? "";
    var cardFourImage = Model?.Value<IPublishedContent>("servicesCardFourImage")?.Url() ?? "";
    var cardFiveImage = Model?.Value<IPublishedContent>("servicesCardFiveImage")?.Url() ?? "";
    var cardSixImage = Model?.Value<IPublishedContent>("servicesCardSixImage")?.Url() ?? "";
    var workteamBackgroundImage = Model?.Value<IPublishedContent>("workteamBackgroundImage")?.Url() ?? "";
    var workteamImage = Model?.Value<IPublishedContent>("workteamImage")?.Url() ?? "";
    var successBackgroundImage = Model?.Value<IPublishedContent>("successBackgroundImage")?.Url() ?? "";
    var conferenceImage = Model?.Value<IPublishedContent>("successConferenceImage")?.Url() ?? "";
    var projectOneImage = Model?.Value<IPublishedContent>("projectsCardOneImage")?.Url() ?? "";
    var projectTwoImage = Model?.Value<IPublishedContent>("projectsCardTwoImage")?.Url() ?? "";
    var projectThreeImage = Model?.Value<IPublishedContent>("projectsCardThreeImage")?.Url() ?? "";
    var projectFourImage = Model?.Value<IPublishedContent>("projectsCardFourImage")?.Url() ?? "";
    var collabImageOne = Model?.Value<IPublishedContent>("collabsImageOne")?.Url() ?? "";
    var collabImageTwo = Model?.Value<IPublishedContent>("collabsImageTwo")?.Url() ?? "";
    var collabImageThree = Model?.Value<IPublishedContent>("collabsImageThree")?.Url() ?? "";
    var collabImageFour = Model?.Value<IPublishedContent>("collabsImageFour")?.Url() ?? "";
    var collabImageFive = Model?.Value<IPublishedContent>("collabsImageFive")?.Url() ?? "";
    var collabImageSix = Model?.Value<IPublishedContent>("collabsImageSix")?.Url() ?? "";
    
}

<section id="showcase" style="background-image:url(@backgroundImage)">
    <div class="container">
        <h1>@Model?.Value("showcaseHeadline")</h1>
        <p>@Model?.Value("showcaseText")</p>
        <a href="@Model?.Value("showcaseButtonUrl")" class="btn-theme">@Model?.Value("showcaseButtonText")</a>
    </div>
</section>

<section id="about-us">
    <div class="container">
        <div class="content">
            <div class="section-title">
                <p class="sub-color">@Model?.Value("aboutSectionTitle")</p>
                <h2>@Model?.Value("aboutHeadline")</h2>
            </div>
            <p class="quote">@Model?.Value("aboutQuote")</p>
            <p>@Model?.Value("aboutText")</p>
            <img src="@signatureImage" alt="@Model?.Value("aboutSignature")">
            <p>@Model?.Value("aboutSignature")</p>
        </div>
        <div class="request-form">
            <div class="form-title">
                <h3>Request a call back</h3>
            </div>
            <form class="" action="">
                <p>Dolor in reprehenderit in voluptate velit esse cillum dolore eu fugiat nulla pariatur excepteur sint occaecat</p>
                <input type="text" placeholder="Name">
                <input type="email" placeholder="Email address">
                <input type="text" placeholder="Phone">
                <button class="btn-theme">Submit</button>
            </form>
        </div>
    </div>
</section>

<section id="homeservices">
    <div class="container">
        <div class="section-title">
            <p class="sub-color">@Model?.Value("servicesSectionTitle")</p>
            <h2>@Model?.Value("servicesHeadline")</h2>
        </div>
        <div class="content">
            <a class="solutions-card" href="/services/risk-management/">
                <div class="solutions-card__title">
                    <h5>@Model?.Value("servicesCardOneTitle")</h5>
                </div>
                <div class="solutions-card__image">
                    <img src="@cardOneImage" alt="@Model?.Value("servicesCardOneTitle")">                          
                </div>
                <div class="solutions-card__footer">
                    <p class="text-s">@Model?.Value("servicesCardOneText")</p>
                </div>
            </a>

            <a class="solutions-card" href="#">
                <div class="solutions-card__title">
                    <h5>@Model?.Value("servicesCardTwoTitle")</h5>
                </div>
                <div class="solutions-card__image">
                    <img src="@cardTwoImage" alt="@Model?.Value("servicesCardTwoTitle")">                          
                </div>
                <div class="solutions-card__footer">
                    <p class="text-s">@Model?.Value("servicesCardTwoText")</p>
                </div>
            </a>

            <a class="solutions-card" href="#">
                <div class="solutions-card__title">
                    <h5>@Model?.Value("servicesCardThreeTitle")</h5>
                </div>
                <div class="solutions-card__image">
                    <img src="@cardThreeImage" alt="@Model?.Value("servicesCardThreeTitle")">                          
                </div>
                <div class="solutions-card__footer">
                    <p class="text-s">@Model?.Value("servicesCardThreeText")</p>
                </div>
            </a>

            <a class="solutions-card" href="#">
                <div class="solutions-card__title">
                    <h5>@Model?.Value("servicesCardFourTitle")</h5>
                </div>
                <div class="solutions-card__image">
                    <img src="@cardFourImage" alt="@Model?.Value("servicesCardFourTitle")">                          
                </div>
                <div class="solutions-card__footer">
                    <p class="text-s">@Model?.Value("servicesCardFourText")</p>
                </div>
            </a>

            <a class="solutions-card" href="#">
                <div class="solutions-card__title">
                    <h5>@Model?.Value("servicesCardFiveTitle")</h5>
                </div>
                <div class="solutions-card__image">
                    <img src="@cardFiveImage" alt="@Model?.Value("servicesCardFiveTitle")">                          
                </div>
                <div class="solutions-card__footer">
                    <p class="text-s">@Model?.Value("servicesCardFiveText")</p>
                </div>
            </a>

            <a class="solutions-card" href="#">
                <div class="solutions-card__title">
                    <h5>@Model?.Value("servicesCardSixTitle")</h5>
                </div>
                <div class="solutions-card__image">
                    <img src="@cardSixImage" alt="@Model?.Value("servicesCardSixTitle")">                          
                </div>
                <div class="solutions-card__footer">
                    <p class="text-s">@Model?.Value("servicesCardSixText")</p>
                </div>
            </a>
        </div>
    </div>
</section>

<section id="workteam">
    <div class="container">
        <div class="section-title">
            <h2>@Model?.Value("workteamHeadline")</h2>
            <h2 class="sub-color">@Model?.Value("workteamHeadlineColored")</h2>
        </div>
        <div class="content">
            <p>@Model?.Value("workteamText")</p>
            <a href="@Model?.Value("workteamButtonUrl")" class="btn-theme">@Model?.Value("workteamButtonText")</a>
        </div>
        <div class="parent">
            <img class="child-1" src="@workteamBackgroundImage" alt="">
            <img class="child-2" src="@workteamImage" alt="">
        </div>
    </div>
</section>

<section id="success-stories">
    <div class="container">
        <img src="@successBackgroundImage" alt="">
        <div class="section-title">
            <p class="sub-color">@Model?.Value("successSectionTitle")</p>
            <h2>@Model?.Value("successHeadline")</h2>
        </div>
        <div class="data-section">
            <div class="content">
                <p class="number">@Model?.Value("successFirstNumbers")</p>
                <p class="text-content">@Model?.Value("successFirstText")</p>
            </div>
            <div class="content">
                <p class="number">@Model?.Value("successSecondNumbers")</p>
                <p class="text-content">@Model?.Value("successSecondText")</p>
            </div>
            <div class="content">
                <p class="number">@Model?.Value("successThirdNumbers")</p>
                <p class="text-content">@Model?.Value("successThirdText")</p>
            </div>
        </div>
        <div class="image-content"><img src="@conferenceImage" alt=""></div>
    </div>
</section>

<section id="recent-projects">
    <div class="container">
        <div class="section-title">
            <p class="sub-color">@Model?.Value("projectsSectionTitle")</p>
            <h2>@Model?.Value("projectsHeadline")</h2>
        </div>
    </div>
    <div class="content">
        <a class="project-card" href="/projects/annual-report/">
            <img src="@projectOneImage" alt="">
            <div class="overlay">
                <p class="title">@Model?.Value("projectsCardOneTitle")</p>
                <p class="information">@Model?.Value("projectsCardOneText")</p>
            </div>
        </a>
        <a class="project-card" href="#">
            <img src="@projectTwoImage" alt="">
            <div class="overlay">
                <p class="title">@Model?.Value("projectsCardTwoTitle")</p>
                <p class="information">@Model?.Value("projectsCardTwoText")</p>
            </div>
        </a>
        <a class="project-card" href="#">
            <img src="@projectThreeImage" alt="">
            <div class="overlay">
                <p class="title">@Model?.Value("projectsCardThreeTitle")</p>
                <p class="information">@Model?.Value("projectsCardThreeText")</p>
            </div>
        </a>
        <a class="project-card" href="#">
            <img src="@projectFourImage" alt="">
            <div class="overlay">
                <p class="title">@Model?.Value("projectsCardFourTitle")</p>
                <p class="information">@Model?.Value("projectsCardFourText")</p>
            </div>
        </a>
    </div>
</section>

<section id="collabs">
    <div class="container">
        <img src="@collabImageOne" alt="">
        <img src="@collabImageTwo" alt="">
        <img src="@collabImageThree" alt="">
        <img src="@collabImageFour" alt="">
        <img src="@collabImageFive" alt="">
        <img src="@collabImageSix" alt="">
    </div>
</section>
